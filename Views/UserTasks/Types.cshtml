@model List<WMKancelariapp.Models.ViewModels.TaskTypeDtoViewModel>

@{
    ViewData["Title"] = "Kategorie";
}

<h2>Kategorie czynności</h2>

<p>
    <a class="btn-template button-create" asp-action="CreateType">Dodaj nową</a>
    <a class="btn-template button-alert" href="@Context.Request.Headers.Referer">Cofnij</a>
</p>
<table class="table table-striped table-hover table-sm" id="resultsTable">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                Najczęściej w
            </th>
            <th>
                Opcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @for(int i=0; i<item.MostFrequentCase.Count; i++)
                    {
                        var separator = i+1 < item.MostFrequentCase.Count ? ", " : "";
                        @($"{item.MostFrequentCase[i].Name}{separator}")
                    }
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "EditType", new { id = item.TaskTypeId }) |
                    @Html.ActionLink("Usuń", "DeleteType", new { id = item.TaskTypeId })
                </td>
            </tr>
        }
    </tbody>
</table>
