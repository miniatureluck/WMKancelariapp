@model WMKancelariapp.Models.ViewModels.ClientIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Klienci</h2>

<p>
    <a asp-action="Create">Nowy klient</a><br />
    <input type="button" class="btn btn-secondary filter-button" value="Filtry" id="filterToggle" />
</p>

<table class="table table-striped table-hover table-sm" id="resultsTable">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                <div class="filter-section">
                    <input type="text" id="clientNameInput" onkeyup="filterNames()" placeholder="Filtruj po imieniu/nazwisku" class="filter-text-input"/><br/>
                </div>
                Imię i nazwisko
            </th>
            <th scope="col" colspan="2">
                Dane kontaktowe
            </th>
            <th scope="col">
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllClients)
        {
            <tr>
                <td>@item.Name @item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    @Html.ActionLink("Szczegóły", "Details", new { id=item.ClientId }) |
                    @Html.ActionLink("Edycja", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Opiekun", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Sprawy", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Cennik", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Usuń", "Delete", new {  id=item.ClientId })
                </td>
            </tr>
        }
    </tbody>
</table>