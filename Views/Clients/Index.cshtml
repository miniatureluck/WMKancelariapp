@model WMKancelariapp.Models.ViewModels.ClientIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Klienci</h2>

<p>
    <a asp-action="Create">Nowy klient</a>
</p>
<table class="table table-striped table-hover table-sm">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                Imię i nazwisko
            </th>
            <th scope="col" colspan="2">
                Dane kontaktowe
            </th>
            <th scope="col">
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllClients)
        {
            <tr>
                <td>@item.Name @item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    @Html.ActionLink("Więcej", "Details", new { id=item.ClientId }) |
                    @Html.ActionLink("Zmień dane", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Opiekun", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Sprawy", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Cennik", "Edit", new { id=item.ClientId }) |
                    @Html.ActionLink("Usuń", "Delete", new {  id=item.ClientId })
                </td>
            </tr>
        }
    </tbody>
</table>
